<div class="row">
      <div class="card shadow p-3">
      <span><h4>| <%=@game_details.name%> Details</h4></span>
      <hr id="new-content-line">
				<div class="row">
					<div class="col-md-auto">
					 <%= image_tag("#{@game_details[:cover]}") %>
					</div>
					<div class="col-md-auto">
					  <div class="card-body">
						  <h5 class="card-title"><%= @game_details[:name] %></h5>
						  <hr id="content-line">
						  <%= unless @game_details[:first_release_date].nil?%>
						  	<p class="card-text">Release Date: <strong><%= date_format(@game_details[:first_release_date]) %></strong></p>
						  <%else%>
						  	<p class="card-text">Release Date: <strong>TBD</strong></p>
						  <%end%>
						  <!--TODO Change to logo link to platform page-->
						  <p class="card-text">Platform: <strong><%= @game_details.platforms.map{|x| x.name}.join(', ') %></strong></p>
						  <!--TODO Change to logo link to platform page-->
						  <p class="card-text">Genres: <strong><%= @game_details.game_genres.map{|x| x.name}.join(', ') %></strong></p>
						  <p class="card-text">Developers: <strong><%=  @game_developer.nil? ? "NA" : @game_developer[:name] %> </strong></p>
						  <p class="card-text">Publisher: <strong><%= @game_publisher.nil? ? "NA" : @game_publisher[:name]  %> </strong></p>
					  </div>
					</div>
				</div>
				<div class="row">
	       <!--<div class="card" >-->
	          <div class="card-body">
	            <div class="card-body">
	              <h5 class="card-title">Summary</h5>
	              <hr id="new-content-line">
	              <p class="card-text"><%=@game_details[:summary] %></p>
	              <h5 class="card-title">Storyline</h5>
	              <hr id="new-content-line">
	              <p class="card-text"><%=@game_details[:storyline] %></p>
	            </div>
	          </div>
	        <!--</div>-->
	  		</div>
	  		<%= render "gamevideocarousel"%>		
			  <%= render "gamecardcarousel"%>
				<%= render "gamenewsfeedcarousel"%>
			</div>

</div>
  <br>