<span><h4>| <%= @game_details[:name] %> Trailers & Gameplay</h4></span>
<hr id="new-content-line">
<% if @game_videos.empty? || @game_videos.nil? %>
  <p>We don't have any video for  <%= @game_details[:name] %> yet! Consider add one. </p>
<%else%>
<div id="video-carousel-example2" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
      <div class="carousel-inner">
      
        <div class="carousel-item active">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src=<%= @game_videos.first.url %> allowfullscreen></iframe>
            </div>
        </div>
        <% @game_videos[1..-1].each do |vid| %>
        <!-- Second slide -->
        <div class="carousel-item">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src=<%= vid.url %> allowfullscreen></iframe>
            </div>
        </div>
         <% end%>
      </div>
     
      <a class="carousel-control-prev" href="#video-carousel-example2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#video-carousel-example2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
</div>
<%end%>