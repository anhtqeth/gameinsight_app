<div class="container" >
  <h1>Details</h1>
  <hr>
  <div class="row">
    <div class="col">
     <div class="card text-white" style="background-color: black;">
        <div class="card-body">
          <div class="card-header">
            <h1><%= @game_details.first["name"] %></h1>
          </div>
          <hr>
          <div class="card-body">
            <h5 class="card-title">Summary</h5>
            <p class="card-text"><%=@game_details.first["summary"] %></p>
            <h5 class="card-title">Storyline</h5>
            <hr>
            <p class="card-text"><%=@game_details.first["storyline"] %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="card text-white" style="width: 12rem; background-color: black;">
      <h5 align="center" class="card-title"><%= @game_details.first["name"] %> Cover Art</h5>
      <img class="card-img-top"<%= image_tag("#{@game_cover}") %>
    </div>
  </div>
</div>

<hr>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
     <h1>Screenshots</h1>
      <ol class="carousel-indicators">
          <% @game_screenshots.each do |img| %>
          <li data-target="#carouselExampleIndicators" data-slide-to=<% img %> </li>
          <% end %>
      </ol>
      
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img class="d-block w-100" src=<%= @game_screenshots.first["url"] %> alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                  <h5> <%= @game_details.first["name"] %></h5>
              </div>
          </div>
          <% @game_screenshots[1..-1].each do |img| %>
          <div class="carousel-item">
              <img class="d-block w-100" src=<%= img["url"] %> alt="Second slide">
          </div>
          <% end%>
          
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
</div>
  
<hr>
  
<h2>VIDEOS</h2>
<div id="video-carousel-example2" class="carousel slide carousel-fade" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
  
    <div class="carousel-item active">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src=<%= @game_videos.first %> allowfullscreen></iframe>
        </div>
    </div>
    <% @game_videos[1..-1].each do |vid| %>
    <!-- Second slide -->
    <div class="carousel-item">
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src=<%= vid %> allowfullscreen></iframe>
        </div>
    </div>
     <% end%>
  </div>
 
  <a class="carousel-control-prev" href="#video-carousel-example2" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#video-carousel-example2" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr>

