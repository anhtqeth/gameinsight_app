<h1>Details</h1>
<div class="card">
  <div class="card-header">
    <%= @game_details.first["name"] %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Summary</h5>
    <p class="card-text"><%=@game_details.first["summary"] %></p>
    <h5 class="card-title">Storyline</h5>
    <p class="card-text"><%=@game_details.first["storyline"] %></p>
  </div>
</div>

<h1>Screenshots Carousel</h1>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
   
    <ol class="carousel-indicators">
        <% @game_screenshots.each do |img| %>
        <li data-target="#carouselExampleIndicators" data-slide-to=<% img %> </li>
        <% end %>
    </ol>
    
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src=<%= @game_screenshots.first["url"] %> alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5> <%= @game_details.first["name"] %></h5>
            </div>
        </div>
        <% @game_screenshots[1..-1].each do |img| %>
        <div class="carousel-item">
            <img class="d-block w-100" src=<%= img["url"] %> alt="Second slide">
        </div>
        <% end%>
        
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

