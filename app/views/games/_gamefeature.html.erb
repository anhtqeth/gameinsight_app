<div id="game-feature-img"  class="card bg-dark text-white">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
    <ol class="carousel-indicators">
      <% @game_screenshots.each do |img| %>
      <li data-target="#carouselExampleIndicators" data-slide-to=<% img %> </li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img id="img-slide" src=<%= @game_screenshots.first.url %> alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h5> <%= @game_details[:name] %></h5>
        </div>
      </div>
        <% @game_screenshots[1..-1].each do |img| %>
        <div class="carousel-item">
          <img  id="img-slide" src=<%= img.url %> alt="Second slide">
        </div>
        <% end%>
        </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
  </div>
  <!--<img class="card-img" src=<= @game_screenshots.sample.url %>  alt="Card image">-->
  <div class="card-img-overlay">
    <div class="row">
      <div class="col-md-auto">
        <h1><%=@game_details[:name] %></h1>
      </div>  
      <div class="col">  
         <p class="card-text"><%= truncate(@game_details[:summary], length: 300)%></p>
      </div>
    </div>
  </div>
</div>  