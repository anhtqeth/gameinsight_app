<div class="container">
<span><h2>| Popular Games by Genres</h2></span>
<hr id="new-content-line">
  
  <%= badge_render(@genres) %>
  
<br>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <p class="lead">Show game here</p>
  </div>
</div>

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Shooter</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Role-playing (RPG)</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Hack and slash/Beat 'em up</a>
  </li>
</ul>
<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">Shooter Here</div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">Role THere</div>
  <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">Hack There</div>
</div>


<% @shooter_games.each do |game| %>
<div class="media shadow p-3 mb-3">
  <div class="media-body">
    <h5 class="mt-0 mb-1"><%=game.name%></h5>
    <%=game.summary%>
  </div>
  <%= image_tag(game.cover,class:"ml-3",alt: game.name+"cover_art")%>
  
</div>
<hr>
<% end%> 


</div>