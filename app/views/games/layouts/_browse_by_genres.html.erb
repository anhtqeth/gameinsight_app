<div class="container">
<span><h2>| Popular Games by Genres</h2></span>
<hr id="new-content-line">
  
  <%= badge_render(@genres) %>
  
<br>

<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <% @popular_genres.each do |genre|%>
    <li class="nav-item">
      <%= link_to genre, discover_path(:genre => genre),class: "nav-link",id:"pills-shooter-tab", "aria-selected": "true","data-toggle":"pill","role": "tab",:remote => true %>
    </li>
  <%end%>
  <hr>
</ul>

<div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pill-games-list" role="tabpanel" aria-labelledby="pills-home-tab"></div>
</div>
<script>
  $("#pills-tab .nav-link").click(function(e){
      var genre = $(this).text();
      // alert("Clicked " + genre);
      $("a").removeClass("active");
      $(this).addClass("active");
  });
</script>

</div>