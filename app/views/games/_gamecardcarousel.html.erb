<!--TODO - Revise this when cover is NA-->
<span><h4>| Series</h4></span>
<hr id="new-content-line">
<% if @game_card_carousel_list.nil?%>
  <p>This game does not belong to any known series. It is probably a new IP, or we are wrong...</p>
<% else %>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="card-deck">
                  <% @game_card_carousel_list[0..@size].each do |gamecard| %>
                  <div class="card" id="game-card" style="width: 18rem;">
                    <% if gamecard[:cover].nil? || gamecard[:cover] == 'NA'%>
                    <!--<img class="card-img-top">-->
                    <div class="card-img-top" id="game-card-img">
                      <h5 class="card-title"><%= gamecard[:title]%></h5>
                    </div>
                    <%else%>
                       <%= image_tag(gamecard[:cover],class:"card-img-top",id:"game-card-img") %>
                    <%end%>
                    <div class="card-body">
                      <a href="<%=game_path(gamecard[:slug]) %>" class="btn btn-outline-warning btn-block">Details</a>
                    </div>
                  </div>
                   <% end %>
                </div>  
            </div>
            <div class="carousel-item">
              <div class="card-deck">
                  <% @game_card_carousel_list[@size+1..-1].each do |gamecard| %>
                  <div class="card" id="game-card" style="width: 18rem;">
                    <% if gamecard[:cover].nil? || gamecard[:cover] == 'NA'%>
                      <div class="card-img-top">
                      <h5 class="card-title"><%= gamecard[:title]%></h5>
                    </div>
                    <%else%>
                       <!--Render game card normally-->
                       <%= image_tag(gamecard[:cover],class:"card-img-top",id:"game-card-img") %>
                    <%end%>
                    <div class="card-body">
                      <a href="<%=game_path(gamecard[:slug]) %>" class="btn btn-outline-warning btn-block">Details</a>
                    </div>
                  </div>
                  <% end %>
                </div>
            </div>
          </div>
          <!--</div>-->
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
  </div>
<% end %>