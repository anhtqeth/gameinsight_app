<div class="container">
  <span><h4>| Latest Release</h4></span>
 
  <div class="dropdown" style="display:inline-block;">
    <button id="platform-select-btn" class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">Pick a Platform</button>
    <ul class="dropdown-menu">
        <% @platforms_list.each do |platform| %>
          <%= content_tag(:a, link_to(platform, root_path(platform_name: platform), remote: true,class: "dropdown-item")) %>
        <% end %>
    </ul>
  </div>
  
  <div id="loadingSpinner" style="display:none;" class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
    <span class="sr-only">Loading...</span>
  </div>
  <hr id="content-line">
  
  <div id="releaseByPlatform" class="row">
  </div>
</div>
