<% provide(:title, "Home") %>
<div class="center jumbotron">
  <head>
    <title><%= yield(:title) %> | Welcome to GameInsight</title>
    
  </head>
  <body>
    <h1>GameInsight</h1>
  </body>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text"></p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

<h1>Feature</h1>
<div class="card-deck">
  <% @game_card_list.each do |gamecard| %>
  <% cache gamecard do %>
  <div class="card">
    <img class="card-img-top"<%= image_tag("#{gamecard[:cover]}") %>
    <div class="card-body">
      <h5 class="card-title"><%= gamecard[:name] %></h5>
      <p class="card-text"><%= gamecard[:summary]  %></p>
      <a href="#" class="btn btn-primary">Link to Game Page</a>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

