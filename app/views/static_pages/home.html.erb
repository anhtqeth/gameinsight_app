<h1>Feature Games Test</h1>
    <div class="card-deck">
      <% @game_card_list.each do |gamecard| %>
      <% cache gamecard do %>
      <div class="card text-white bg-dark mb-3">
        <img class="card-img-top"<%= image_tag("#{gamecard[:cover]}") %>
        <div class="card-body">
          <h5 class="card-title center"><%= gamecard[:name] %></h5>
        </div>
        <div class="card-footer">
          <a href="<%=game_path(gamecard[:id]) %>" class="btn btn-outline-warning btn-block">Details</a>
        </div>
     </div>
      <% end %>
      <% end %>
    </div>
</div>
<hr>

<h1>Screenshots Carousel</h1>
<div class="container" >
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
     <h1>Screenshots</h1>
      <ol class="carousel-indicators">
          <% @dummy_feature_list.each do |img| %>
          <li data-target="#carouselExampleIndicators" data-slide-to=<% img %> </li>
          <% end %>
      </ol>
      
      <div class="carousel-inner">
          <div class="carousel-item active">
              <img class="d-block w-100" src=<%= @dummy_feature_list.first["url"] %> alt="First slide">
          </div>
          <% @dummy_feature_list[1..-1].each do |img| %>
          <div class="carousel-item">
              <img class="d-block w-100" src=<%= img["url"] %> alt="Second slide">
          </div>
          <% end%>
          
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
</div>
</div>
