<% provide(:title, "Home |") %>
<br>
<div class="container">
  <%= render "latestnewsfeed"%>
</div>

<div class="container">
  <%= render "populargames" %>
</div>

<div class="container">
  <span><h4>| Latest Release</h4></span>
 
  <div class="dropdown">
    <button id="platform-select-btn" class="btn btn-secondary dropdown-toggle" type="button" aria-expanded="false" data-toggle="dropdown">Pick a Platform</button>
    <div class="dropdown-menu">
        <% @platforms_list.each do |platform| %>
          <%= content_tag(:a, link_to(platform, root_path(platform_name: platform), remote: true,class: "dropdown-item")) %>
        <% end %>
    </div>
  </div>
  
  <div id="loadingSpinner" style="display:none;" class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
    <span class="sr-only">Loading...</span>
  </div>
  <hr id="content-line">
  
  <div id="releaseByPlatform" class="row">
  </div>
</div>

<div class="container" >
  <%= render "featureguides" %>
</div>

<div class="container" >
  <%= render "layouts/bestgamesplatform" %>
</div>


