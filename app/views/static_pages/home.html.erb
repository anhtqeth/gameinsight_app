<div class="card">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text"></p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

<h1>Feature</h1>
<div class="card-deck">
  <% @game_card_list.each do |gamecard| %>
  <% cache gamecard do %>
  <div class="card">
    <img class="card-img-top"<%= image_tag("#{gamecard[:cover]}") %>
    <div class="card-body">
      <h5 class="card-title"><%= gamecard[:name] %></h5>
      <p class="card-text"><%= gamecard[:summary]  %></p>
      <a href="#" class="btn btn-primary">Link to Game Page</a>
    </div>
  </div>
  <% end %>
  <% end %>
</div>


<!-- For Specific Game, This is a test-->
<h1>Screenshots Carousel</h1>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src=<%= @dummy_feature_list.first["url"] %> alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Yakuza Kiwami 2</h5>
                <p> As the heroic Kazuma Kiryu from the original Yakuza, explore Tokyo and now Osaka. </p>
            </div>
        </div>
        <% @dummy_feature_list.each do |img| %>
        <div class="carousel-item">
            <img class="d-block w-100" src=<%= img["url"] %> alt="Second slide">
        </div>
        <% end%>
        
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


